use V6evalRemote;
use File::Basename;

my $basename	= basename($0, '.rmt');
my $prompt	= "$basename> ";

my $fd = select(STDIN);  $| = 1; select($fd);
   $fd = select(STDOUT); $| = 1; select($fd);
   $fd = select(STDERR); $| = 1; select($fd);

rArg();

unless(defined($rOpt_name)) {
	print STDERR "name is missing.\n";
	goto error;
}

unless(defined($rOpt_value)) {
	print STDERR "value is missing.\n";
	goto error;
}

# $rOpt_timeout
unless(defined($rOpt_timeout)) {
	$rOpt_timeout = 5;
}

print "\n";
print $prompt . "\n";

if($rOpt_name eq 'net.inet6.ip6.forwarding') {
	print $prompt;
	print ($rOpt_value eq '1')? 'Enable ': 'Disable ';
	print "IPv6 forwarding capability\n";
} else {
	print $prompt. "$rOpt_name: $rOpt_value\n";
}

print $prompt . "\n";
print $prompt . "Press Enter key for continue. \a\n";
<STDIN>;
print $prompt . "\n";
print "\n";

exit($V6evalRemote::exitPass);

error:
	exit($V6evalRemote::exitFail);
